<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dip_10"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#4f4f4f"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/popupwindow_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="男装"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="男鞋"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="女装"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="女鞋"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="T恤"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:text="美妆护肤"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="手机数码"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="户外运行"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:button="@null"
                    android:text="零食"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </RadioGroup>
        </HorizontalScrollView>

        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="#999999"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/popupwindow_item_class"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra10"
                    android:layout_width="45dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/category_icon_sweater_n_xhdpi"
                    android:gravity="center"
                    android:text="毛衣" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra11"
                    android:layout_width="45dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/category_icon_pants_n_xhdpi"
                    android:gravity="center"
                    android:text="裤装" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra12"
                    android:layout_width="45dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/category_icon_skirt_n_xhdpi"
                    android:gravity="center"
                    android:text="裙装" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra13"
                    android:layout_width="45dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/icon_coat_xhdpi"
                    android:gravity="center"
                    android:text="外套" />

                <RadioButton
                    android:id="@+id/popupwindow_item_child_ra14"
                    android:layout_width="45dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/category_icon_sweater_n_xhdpi"
                    android:gravity="center"
                    android:text="卫衣" />

            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>