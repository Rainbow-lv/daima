<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/userbgtwo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_shape"
        android:layout_marginTop="142dp">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我是吃不胖的小姐姐"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="60dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageinfor"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/infortwo"/>
                <TextView
                    android:id="@+id/user_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@+id/imageinfor"
                    android:text="个人资源"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="40dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/imagecircle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/circletwo"/>
                <TextView
                    android:id="@+id/user_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@+id/imagecircle"
                    android:text="我的圈子"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="40dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/imagefoot"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/foottwo"/>
                <TextView
                    android:id="@+id/user_foot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/imagefoot"
                    android:textColor="#666666"
                    android:text="我的足迹"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="40dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/walletimage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/wallettwo"/>
                <TextView
                    android:id="@+id/user_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@+id/walletimage"
                    android:text="我的钱包"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="40dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/addressimage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/addresstwo"/>
                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@+id/addressimage"
                    android:text="我的收货地址"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="40dp"/>

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginRight="30dp"
                android:background="@android:color/holo_red_light"
                android:text="退出登录"
                android:textColor="@android:color/white" />

        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:adjustViewBounds="true"
        app:roundAsCircle="true"
        android:id="@+id/head_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/userheadtwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"/>
</RelativeLayout>